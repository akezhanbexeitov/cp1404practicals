BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: '0'
            font_size: 48
            multiline: False
            on_text_validate: app.handle_press(int(user_input.text))

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.handle_up()
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.handle_down()

#    BoxLayout:
